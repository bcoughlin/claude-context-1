{
    "name": "vector-memory-vscode",
    "displayName": "Vector Memory for VS Code",
    "description": "An extension that provides vector memory capabilities for storing and searching conversational context",
    "version": "0.1.7",
    "publisher": "local-dev",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "claude-context.toggleNetworkInterception",
                "title": "Toggle Network Interception",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.testCommand",
                "title": "Test Command",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.showTokenStats",
                "title": "Show Token Stats",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.storeContext",
                "title": "Store Context",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.resetCounter",
                "title": "Reset Token Counter",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.manageContext",
                "title": "Manage Context",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.searchMemory",
                "title": "Search Memory",
                "category": "Claude Context"
            },
            {
                "command": "claude-context.validateMCP",
                "title": "Validate MCP Connection",
                "category": "Claude Context"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run webpack",
        "webpack": "pnpm clean && webpack --mode production && node copy-assets.js",
        "webpack:dev": "pnpm clean && webpack --mode development --watch",
        "clean": "rimraf dist"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@vscode/vsce": "^2.19.0",
        "rimraf": "^3.0.2",
        "typescript": "^5.1.6",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.4"
    }
}
